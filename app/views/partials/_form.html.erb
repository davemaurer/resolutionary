<section class="hero-dashboard">
  <div class="row">
    <div class="large-6 large-push-2 columns">
      <div class="circle-bg quote-1">
        <p>What are you doing?</p>
      </div>
    </div>
    <div class="large-6 large-pull-2 columns">
      <div class="circle-bg quote-2">
        <p>And WHY are you doing it?</p>
      </div>
    </div>
  </div>
</section>

<br>
<div class="large-6 large-centered columns">
  <div class="card">
    <div class="content">
      <div class="form-card">
        <%= form_for(@resolution, multiplart: true) do |f| %>
          <label for="resolution_title">Resolution</label>
          <%= f.text_field :title %>
          <label for="resolution_description">Reasons - Why are you doing it?</label>
          <%= f.text_area :description %>
          <% if @resolution.id %>
            <%= f.submit "Edit", class: "button round small", method: :put %>
          <%else %>
            <%= f.submit "Create", class: "button round medium" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
