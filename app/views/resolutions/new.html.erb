<%= render "topbar/topbar_new" %>
<br>
<div class="large-6 large-centered columns">
  <%= form_for(@resolution) do |f| %>
    <%= f.label "resolution - What do you want to accomplish?", class: "edit-label" %>
    <%= f.text_field :title %>
    <%= f.label "reasons - Why are you doing it?", class: "edit-label" %>
    <%= f.text_area :description %>
    <%= f.label "picture", class: "edit-label" %>
    <%= f.file_field :motive_image %>
    <%= f.submit "Create", class: "button" %>
  <% end %>
</div>
