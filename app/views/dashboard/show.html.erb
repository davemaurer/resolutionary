<%= render "partials/topbar" %>
<section class="hero-dashboard">
  <div class="row">
    <div class="large-6 large-push-2 columns">
      <div class="circle-bg quote-1">
        <p>Change your life.<br> You can do it.</p>
      </div>
    </div>
    <div class="large-6 large-pull-2 columns">
      <div class="circle-bg quote-2">
        <p>The journey of a thousand miles is made up of many small steps.</p>
      </div>
    </div>
  </div>
</section>

<div class="row">
  <!-- Main Feed -->
  <!-- This has been source ordered to come first in the markup (and on small devices) but to be to the right of the nav on larger screens -->
  <div class="large-8 columns">

    <!-- Feed Entry -->
    <h4><div class="dash4">Resolutions</div></h4>
    <br>
    <% current_user.resolutions.reverse.each do |resolution| %>
    <div class="row">
      <div class="large-10 columns">
        <div class="card">
          <div class="content">
              <span><a href="#" data-reveal-id="myModal"> <%= resolution.title %></a></span>

                <div id="myModal" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
                  <p class="lead">Details for <%= resolution.title %></p>
                  <%= resolution.goals.each do |goal| %>
                    <p>I'm a cool paragraph that lives inside of an even cooler modal. Wins!</p>
                    <%= goal.name %>
                  <% end %>
                  <a class="close-reveal-modal" aria-label="Close">&#215;</a>
                </div>
               <p><%= resolution.description %></p>
            </div>
              <div class="action">
                <%= link_to "Edit", edit_resolution_path(resolution) %>
                <a href="">Share</a>
                <%= link_to "Delete", resolution_path(resolution), method: :delete , data: {confirm: "This will remove your resolution. Are you sure?"} %>
                <%= link_to "Add Goal", new_goal_path %>
                <%= link_to "Tweet This", resolution_tweets_path(resolution), method: :post %>
            </div>
        </div>

        <!--<h6>2 Comments</h6>-->

        <!--<div class="row">-->
          <!--<div class="large-2 columns small-3"><img src="http://placehold.it/50x50&text=[img]"/></div>-->
          <!--<div class="large-10 columns">-->
            <!--<p>Bacon ipsum dolor sit amet nulla ham qui sint exercitation eiusmod commodo, chuck duis velit. Aute in-->
              <!--reprehenderit</p></div>-->
        <!--</div>-->
        <!--<div class="row">-->
          <!--<div class="large-2 columns small-3"><img src="http://placehold.it/50x50&text=[img]"/></div>-->
          <!--<div class="large-10 columns">-->
            <!--<p>Bacon ipsum dolor sit amet nulla ham qui sint exercitation eiusmod commodo, chuck duis velit. Aute in-->
              <!--reprehenderit</p></div>-->
        <!--</div>-->
      </div>
    </div>
    <br>
    <% end %>
    <!-- End Feed Entry -->
  </div>

  <!-- Right Sidebar -->
  <!-- On small devices this column is hidden -->
  <aside class="large-4 columns hide-for-small">
    <h4><div class="dash4">Motivation</div></h4>
    <br>
    <ol>
      <% cache do %>
      <% current_user.inspirational_tweets.each do |tweet| %>
        <li><%= tweet.text %></li>
        <br>
      <% end %>
      <% end %>
    </ol>
  </aside>

</div>

<!-- Footer -->

<footer class="row">
  <div class="large-12 columns">
    <hr/>
